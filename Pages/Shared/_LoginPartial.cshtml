@using Microsoft.AspNetCore.Identity
@using HealthcareBookingSystem.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <span class="nav-link text-light">Hello, @UserManager.GetUserName(User)!</span>
    <a class="nav-link text-light" asp-page="/Appointments/MyBookings">My Bookings</a>
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Appointments/Index", new { area = "" })" method="post" style="display:inline;">
        <button type="submit" class="nav-link btn btn-link text-light">Logout</button>
    </form>
}
else
{
    <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Page("/Appointments/Index", new { area = "" })">Login</a>
    <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register">Register</a>
}